<form action="/crewRoute/createCrew" method="POST" id="myForm" name="myForm">
    <fieldset>
        <legend>Add Aircrew</legend>
        <div class=".flex-container">
            <input class="flex-item" type="text" id="name" name="name" placeholder="Name"> <br/>
            <input class="flex-item" type="text" id="callSign" name="callSign" placeholder="Call Sign"> <br/>
        </div>
    </fieldset>
    <br />
    <br />
    <fieldset>
        <legend>Qualifications</legend>
        <div class="flex-container">

            <fieldset>
                <div class="qual-item">
                    <input type="radio" id="pilot" name="myRadios" value="1" checked />
                    <label for="pilot">Pilot</label>
                    <input type="radio" id="crew" name="myRadios" value="1" />
                    <label for="crew">Crew Chief</label>
                </div>
            </fieldset>
        

            <div class="qual-item">
                <input type="checkbox" id="PC" name="PC" value="1"> <br/>
                <label for="flyUH60">PC</label>    
            </div>
            <div class="qual-item">
                <input type="checkbox" id="PI" name="PI" value="1"> <br/>
                <label for="flyUH60">PI</label>    
            </div>
            <div class="qual-item">
                <input type="checkbox" id="flyUH60" name="flyUH60" value="1" checked> <br/>
                <label for="flyUH60">UH-60</label>    
            </div>
            <div class="qual-item">
                <input type="checkbox" id="flyUH72" name="flyUH72" value="1"> <br/>
                <label for="flyUH60">UH-72</label>    
            </div>
        </div>
    </fieldset>
    <br />
    <input class="btn" type="submit" name="submit" value="Submit">
    <a class="btn" href="/userRoute/dashboard">CANCEL</a>
</form>

<script>
    var radios = document.querySelectorAll('input[type=radio][name="myRadios"]');
    radios.forEach(radio => radio.addEventListener('change', () => {
        if (document.getElementById('crew').checked)
        {
            document.getElementById('PC').disabled = true;
            document.getElementById('PI').disabled = true;
            
            document.getElementById('PC').checked = false;
            document.getElementById('PI').checked = false;
        }
        else
        {
            document.getElementById('PC').disabled = false;
            document.getElementById('PI').disabled = false;
        }
    }));
    </script>
</script>
